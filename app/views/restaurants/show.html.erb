<h1><%= @restaurant.name %></h1>

<h2>Reviews</h2>

<%= simple_form_for [@restaurant, Review.new] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.button :submit %>
<% end %>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <p><%= review.content %></p>
      <p>Rating: <%= review.rating %></p>
    </li>
  <% end %>
</ul>
